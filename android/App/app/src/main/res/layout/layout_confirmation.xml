<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navigation_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        tools:text="Fresh Milk 1L" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmation_button_positive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@color/colorPositive"
        tools:text="Add to cart" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmation_button_negative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@color/colorNegative"
        tools:text="Don't add" />

</androidx.appcompat.widget.LinearLayoutCompat>