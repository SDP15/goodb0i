<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/confirmation_subtitle"
            style="@style/TitleSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_checkout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/navigation_info_container"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:background="@drawable/view_border"
            android:orientation="vertical"
            android:padding="@dimen/textview_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmation_subtitle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/confirmation_button_Pay"
            app:layout_constraintVertical_bias="0.357" android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirmation_list_code"
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_textsize"
                tools:text="Order: 12345678" android:layout_marginTop="10dp" android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirmation_list_date"
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_textsize"
                tools:text="Date: 28/01/2019" android:layout_marginTop="10dp" android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirmation_list_cost"
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_textsize"
                tools:text="Total cost: Â£23.87" android:layout_marginTop="10dp" android:textAlignment="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmation_button_Pay"
            style="@style/BorderedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>