<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:background="@color/colorPrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:text="@string/goodboi"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="60sp"
            android:id="@+id/your_orders_goodboi" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.050000012"/>
    <TextView
            android:text="@string/label_your_orders"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:id="@+id/your_orders_orders" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/your_orders_goodboi" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/label_your_orders"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:id="@+id/your_orders_orders_view"
            android:background="@drawable/border_text_view"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/your_orders_orders"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.17000002"/>
    <Button
            android:text="@string/view_shopping_list"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/yoour_orders_view_list" android:layout_marginTop="8dp"
            android:background="@drawable/border_text_view"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/your_orders_orders_view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.07999998"/>
    <Button
            android:text="@string/action_start_shopping"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/yoour_orders_start" android:layout_marginTop="8dp"
            android:background="@drawable/border_text_view"
            app:layout_constraintTop_toBottomOf="@+id/yoour_orders_view_list"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.31"/>
</androidx.constraintlayout.widget.ConstraintLayout>