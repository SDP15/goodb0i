<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orders_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodboi"
        style="@style/TitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orders_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_your_orders"
        style="@style/TitleSubText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_header" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orders_order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/orders_subhead"
        app:layout_constraintBottom_toTopOf="@+id/orders_button_view_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        style="@style/BorderedTextView"
        android:text="@string/label_your_orders"
        tools:text="Order #10456987\nDate: 28/01/2019\nTotal cost: Â£10.50"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/orders_button_view_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_shopping_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_order_text"
        app:layout_constraintBottom_toTopOf="@+id/orders_button_start_shopping"
        style="@style/BorderedButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/orders_button_start_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BorderedButton"
        android:text="@string/action_start_shopping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_button_view_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>