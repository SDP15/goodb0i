<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:animateLayoutChanges="true">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_order_date"
            style="@style/BodyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.6"
            tools:text="02/01/2019" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_order_bill"
            style="@style/BodyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            tools:text="Â£10"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_item_drag_handle2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_button_container"
            app:layout_constraintWidth_percent="0.2"
            app:srcCompat="@drawable/ic_drag_handle"/>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/item_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/text_order_date"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="0dp">

        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:id="@+id/view_shopping_list_btn"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_order_date"
                android:text="@string/action_view_shopping_list"
                app:layout_constraintStart_toStartOf="parent"
                android:adjustViewBounds="false"
                android:textSize="25sp"/>
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/start_nav_btn"
                app:layout_constraintTop_toBottomOf="@+id/view_shopping_list_btn"
                android:text="@string/action_start_navigation"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="false"
                android:textSize="25sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>