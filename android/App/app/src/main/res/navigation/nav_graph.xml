<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcome_fragment">

    <fragment android:id="@+id/welcome_fragment"
        android:name="com.sdp15.goodb0i.view.welcome.WelcomeFragment"
        android:label="welcome_fragment"
        tools:layout="@layout/layout_welcome">

        <action
            android:id="@+id/action_welcome_fragment_to_pin_fragment"
            app:destination="@id/pin_fragment" />

        <action android:id="@+id/action_welcome_fragment_to_list_creation_fragment" app:destination="@id/list_creation_fragment"/>

    </fragment>


    <fragment android:name="com.sdp15.goodb0i.view.list.ListPagingFragment"
        android:id="@+id/list_creation_fragment"
        android:label="list_creation_fragment">


    </fragment>

    <fragment android:id="@+id/pin_fragment"
        android:name="com.sdp15.goodb0i.view.pin.PinFragment"
        android:label="pin_fragment"
        tools:layout="@layout/layout_pin_input">


        <action
            android:id="@+id/action_pin_fragment_to_orders_fragment"
            app:destination="@id/orders_fragment" />

        <action android:id="@+id/action_pin_fragment_to_device_list_fragment"
            app:destination="@id/device_list_fragment"/>

    </fragment>

    <fragment android:id="@+id/device_list_fragment"
        android:name="com.sdp15.goodb0i.view.connection.devices.DeviceListFragment"
        android:label="device_list_fragment"
        tools:layout="@layout/layout_bluetooth">

    </fragment>

    <fragment android:id="@+id/error_fragment"
        android:name="com.sdp15.goodb0i.view.error.ErrorFragment"
        android:label="error_fragment"
        tools:layout="@layout/layout_error">

    </fragment>

    <fragment android:id="@+id/scanner_fragment"
        android:name="com.sdp15.goodb0i.view.scanner.ScannerFragment"
        android:label="scanner_fragment"
        tools:layout="@layout/layout_scanner">

        <action android:id="@+id/error"
                app:destination="@+id/error_fragment"/>
        <action
            android:id="@+id/action_scanner_fragment_to_confirmation_fragment"
            app:destination="@id/confirmation_fragment" />
    </fragment>

    <fragment android:id="@+id/orders_fragment"
        android:name="com.sdp15.goodb0i.view.orders.OrdersFragment"
        android:label="orders_fragment"
        tools:layout="@layout/layout_your_orders">

        <argument
            android:name="pin"
            app:argType="long" />
    </fragment>

    <fragment android:id="@+id/confirmation_fragment"
        android:name="com.sdp15.goodb0i.view.confirmation.ConfirmationFragment"
        android:label="confirmation_fragment"
        tools:layout="@layout/layout_confirmation">

    </fragment>

    <fragment android:id="@+id/item_fragment"
        android:name="com.sdp15.goodb0i.view.item.ItemFragment"
        android:label="item_fragment"
        tools:layout="@layout/layout_item_display">

        <action
            android:id="@+id/action_item_fragment_to_scanner_fragment"
            app:destination="@id/scanner_fragment" />
    </fragment>

    <fragment android:id="@+id/search_fragment" android:label="search_fragment"
        android:name="com.sdp15.goodb0i.view.list.SearchFragment"
        tools:layout="@layout/layout_search">

    </fragment>

    <fragment android:id="@+id/list_fragment" android:label="search_fragment"
        android:name="com.sdp15.goodb0i.view.list.ShoppingListFragment"
        tools:layout="@layout/layout_shoppinglist">

    </fragment>


</navigation>